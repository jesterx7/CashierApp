<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiptActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:text="Warung Dayak Mahakam\nJln.Sei Musi No.34, Samarinda\nTelp : 0541743884"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/rubik_medium"/>
            <TextView
                android:id="@+id/tvDateTime"
                android:text="Date and Time"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/tvNoOrder"
                android:text="No Order  : "
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"/>
            <TableLayout
                android:id="@+id/tabelNotaMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1"
                android:layout_marginTop="10dp"
                android:padding="15dp">
                <TableRow>
                    <TextView
                        android:text="Menu"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:fontFamily="@font/rubik_regular"/>
                    <TextView
                        android:text="Total"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:fontFamily="@font/rubik_regular"/>
                </TableRow>
            </TableLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:text="Terima Kasih\nAtas Pembeliannya"
                android:fontFamily="@font/rubik_medium"
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <CheckBox
                    android:id="@+id/cboxPrint"
                    android:text="Print Nota"
                    android:layout_width="wrap_content"
                    android:layout_height="50px"
                    android:gravity="center_vertical"
                    android:checked="true"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
                <Button
                    android:id="@+id/btnDone"
                    android:text="DONE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="#FFF"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>